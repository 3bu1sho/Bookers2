    <main>
<div class="col-md-9 offset-md-3">

  <h1>Book detail</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<a class="Back" href="/books">Back</a>
</div>
    </main>