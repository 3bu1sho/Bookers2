    <main>
<div class="col-md-9 offset-md-3">
  
<% if @book.errors.any? %>
  <p><%= @book.errors.count %>件のerrorが発生しました</p>
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

  <h1>Editing Book</h1>
  <h1>Book detail</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<a class="Back" href="/books">Back</a>
</div>
    </main>