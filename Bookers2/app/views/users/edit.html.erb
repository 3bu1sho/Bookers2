<h2>User info</h2>
<% if @user.errors.any? %>
<p><%= @user.errors.count %>件のエラーが発生しました</p>
<% @user.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>
<% end %>


<%= form_with model:@user, local:true do |f| %>
<h1>name</h1>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  
  <h1>image</h1>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  
  <h1>introduction</h1>
    <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
  <%= f.submit " Update User" %>
<% end %>